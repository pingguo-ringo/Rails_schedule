<div class="main main_new_edit">
  <h2>スケジュール編集</h2>

  <% if flash[:alert] %>
    <p class="index-flash-alert"><%= flash[:alert] %></p>
  <% end %>
  <%= render "shared/error", obj: @post %>
  <%= form_with model: @post do |f| %>
    <table>
      <tr>
        <th><%= f.label :title ,"タイトル"%></th>
        <td><%= f.text_field :title %> </td>
      </tr>
      <tr>
        <th><%= f.label :start ,"開始日"%></th>
        <td><%= f.date_field :start %></td>
      </tr>
      <tr>
        <th><%= f.label :finish ,"終了日"%></th>
        <td><%= f.date_field :finish %></td>
      </tr>
      <tr>
        <th><%= f.label :all_day ,"終日"%></th>
        <td>
          <%= f.check_box :all_day %>
          <p>終日の場合はチェックを入れます</p> 
        </td>
      </tr>
      <tr>
        <th><%= f.label :memo ,"スケジュールメモ"%></th>
        <td><%= f.text_area :memo %></td>
      </tr>
    </table>
    <ul>
      <li>
        <p><%= f.submit "スケジュールの編集を完了する"%></p>
        <p><%= link_to "スケジュール一覧に戻る", posts_path %></p>
      </li>
    </ul>
  <% end %>
</div>